@model MVCWeb.Models.OrderManageModel
<table class="table table-striped table-bordered table-hover" id="cartracking-table">
    <thead>
        <tr>
            <th class="text-center" style="width: 100px">Ngày chạy</th>
            <th class="text-center" style="width: 110px">Biển số xe</th>
            <th style="width: 220px">Mô tả</th>
            <th class="text-center" style="width: 100px">Tài xế</th>
            <th class="text-center" style="width: 100px">Lơ xe</th>
            <th style="width: 110px">Tổng thu</th>
            <th>Ghi chú</th>
            <th style="width: 92px"></th>
        </tr>
    </thead>
    <tbody>
        @{ var odd = true; }
        @foreach (var item in Model.Orders)
        {
            <tr class="@(odd ? "odd" : "even")">
                <td class="text-center">@item.RunDate.ToString("dd/MM/yyyy")</td>
                <td class="text-center">@item.LicensePlate</td>
                <td class="@(item.IsExpress?"success":"warning")">@item.Description</td>
                <td class="text-center">@item.DriverName</td>
                <td class="text-center">@item.AssistantName</td>
                <td class="text-danger"><strong>@item.TotalCashInString</strong></td>
                <td class="text-info">@item.Note</td>
                <td class="text-center"><button type="button" class="btn btn-primary btn-sm" onclick="loadCarTrackingEditForm(@item.Id)">Cập nhật</button></td>
            </tr>
            odd = !odd;
        }
    </tbody>
</table>
@Html.PagerBootstrap(Model.ItemCount, Model.PageSize)
