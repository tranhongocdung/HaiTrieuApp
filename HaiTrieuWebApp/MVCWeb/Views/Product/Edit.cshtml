@model MVCWeb.Models.ProductEditViewModel

<div class="modal fade" id="product-edit-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"@* data-backdrop="static"*@>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="modal-title">Thêm/Sửa khách hàng</h4>
            </div>
            <div class="modal-body" id="modal-body">
                @using (Ajax.BeginForm("Edit", "Product", new AjaxOptions
                {
                    InsertionMode = InsertionMode.Replace,
                    HttpMethod = "POST",
                    OnBegin = "productEditBegin",
                    OnSuccess = "productEditCallBack"
                }, new {id = "frmProductEdit"}))
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Tên khách hàng</label>
                                @Html.TextBoxFor(o => o.Product.ProductName, new {@class = "form-control", @id = "txtProductName"})
                                @Html.HiddenFor(o => o.Product.Id, new {@id = "ObjId"})
                            </div>
                        </div>
                    </div>
@*                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Điện thoại</label>
                                @Html.TextBoxFor(o => o.Product.PhoneNo, new { @class = "form-control", @id = "txtPhoneNo" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Email</label>
                                @Html.TextBoxFor(o => o.Product.Email, new { @class = "form-control", @id = "txtEmail" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Địa chỉ</label>
                                @Html.TextBoxFor(o => o.Product.Address, new { @class = "form-control", @id = "txtAddress" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Quận/Huyện</label>
                                @Html.TextBoxFor(o => o.Product.Region, new { @class = "form-control", @id = "txtRegion" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Tỉnh/Thành phố</label>
                                @Html.TextBoxFor(o => o.Product.Area, new { @class = "form-control", @id = "txtArea" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Ghi chú cho khách hàng</label>
                                @Html.TextAreaFor(o => o.Product.Note, 3, 10, new { @class = "form-control", @id = "txtNote" })
                            </div>
                        </div>
                    </div>*@
                }
                <div id="edit-content" class="notification-container"></div>
            </div>
            <div class="modal-footer">
                <div class="col-md-2">
                    <img src="/Content/images/ajax-loader-3.gif" class="edit-loader" style="display: none" id="edit-loader"/>
                </div>
                <div class="col-md-6"></div>
                @*<div class="col-md-2">
                    <button type="button" class="btn btn-block btn-danger" id="btnDelete" style="display: none">Xóa</button>
                </div>
                <div class="col-md-4">
                    <button type="button" class="btn btn-block btn-success" id="btnResetEditForm">Tạo mới</button>
                </div>*@
                <div class="col-md-4">
                    <button type="button" class="btn btn-block btn-primary" id="btnSave">Lưu lại</button>
                </div>
            </div>
        </div>
    </div>
</div>